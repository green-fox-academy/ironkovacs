<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">

  <link rel="stylesheet" type="text/css" href="/static/style.css">
  <title>Coctails</title>
</head>

<body>
  <h1>Cocktail list</h1>
  <h2>Alcohol</h2>
  <ul>
    <li>
      <a href="/">all</a>
    </li>
    <% alcohol.forEach(e =>{%>
      <li>
        <a href="/?alcohol=<%= e %>" class="alcohol">
          <%= e %>
        </a>
      </li>
      <% }) %>
  </ul>
  <table>
    <thead>
      <tr>
        <th>
          name
        </th>
        <th>
          price
        </th>
      </tr>
    </thead>
    <tbody>
      <% cocktails.forEach(e =>{ %>
        <tr>
          <td>
            <p class="name">
              <%= e.name %>
                <% if(e.isAlcoholic === false) { %>
                  <i>Non-alcoholic</i>
                  <% } %>
            </p>
            <p class="contains">
              <%= e.contains %>
            </p>
          </td>
          <td>
            <%= e.price %>,-
          </td>
        </tr>
        <% }) %>
    </tbody>
  </table>
</body>

</html>